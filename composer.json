{
    "name": "estebanforge/unrepress",
    "description": "WordPress plugin to obtain updates directly from git providers (like GitHub, BitBucket or GitLab)",
    "version": "0.5.0",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Esteban Cuevas",
            "email": "esteban@attitude.cl"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "pestphp/pest": "^1.23",
        "friendsofphp/php-cs-fixer": "^3.64",
        "dingo-d/wp-pest-integration-test-setup": "^1.6"
    },
    "scripts": {
        "version-bump": [
            "php .ci/version-bump.php"
        ],
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "release": "php-cs-fixer fix && composer dump-autoload --optimize",
        "post-install-cmd": [
            "strauss compose",
            "composer dump-autoload"
        ],
        "post-update-cmd": [
            "strauss compose",
            "composer dump-autoload"
        ]
    },
    "autoload": {
        "psr-4": {
            "UnrePress\\": "src/"
        },
        "classmap": [
            "src/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "UnrePress\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "composer/installers": true
        }
    },
    "extra": {
        "mozart": {
            "dep_namespace": "EstebanForge\\UnrePress\\Dependencies\\",
            "dep_directory": "/src/Dependencies/",
            "classmap_directory": "/classes/dependencies/",
            "classmap_prefix": "ESFR_",
            "packages": [
                "pimple/pimple"
            ],
            "excluded_packages": [
                "psr/container"
            ],
            "override_autoload": {
            },
            "delete_vendor_directories": true
        }
    }
}
